@model PropertyViewModel

<div class="modal fade" id="DeleteProduct-@Model.PropertyId" aria-labelledby="DeletePropertyLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deletePropertyLabel">Delete Property</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form asp-action="Delete" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="PropertyId" />
                        <p>Are you sure to delete this property?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" id="mainCloseButton" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <input type="hidden" asp-for="PropertyId" />
                        <input type="submit" value="Delete" class="btn btn-danger"/>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>